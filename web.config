<configuration>
  <system.webServer>
    <handlers>
      <!-- Route all requests to iisnode for Node.js -->
      <add name="iisnode" path="dist/index.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <!-- Rewrite API calls and everything else to index.js -->
        <rule name="NodeJS" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll" trackAllCaptures="false" />
          <action type="Rewrite" url="dist/index.js" />
        </rule>
      </rules>
    </rewrite>
    <!-- Optional: logging -->
    <iisnode 
      loggingEnabled="true"
      devErrorsEnabled="true"
      node_env="production"
    />
  </system.webServer>
</configuration>
